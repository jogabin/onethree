		<url-pattern>/</url-pattern>
	</filter-mapping-->
	
	<resource-ref>
		<description>test</description>
		<res-ref-name>jdbc/SpringTestDB</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
	</resource-ref>
		
	
</web-app>